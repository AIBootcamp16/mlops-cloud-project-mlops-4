# 데이터 저장 경로 (기본: ./data)
OUT_DIR=./data

# 프로젝트 이름/파일 접두사 (기본: upbit_ticker)
PROJECT=upbit_ticker

# API 호출 주기 (초 단위, 기본: 10)
POLL_INTERVAL_SEC=10

# Flush 주기: 버퍼를 parquet에 강제 기록하는 최대 대기 시간 (초 단위, 기본: 600 = 10분)
FLUSH_MAX_SEC=600

# 수집할 KRW 마켓 개수 제한 (기본: 5)
MARKETS_LIMIT=5

# Parquet 압축 알고리즘 (예: zstd, snappy, gzip … 기본: zstd)
PARQUET_COMPRESSION=zstd

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR … 기본: INFO)
LOG_LEVEL=INFO

# S3 업로드 사용 여부
ENABLE_S3_UPLOAD=true

# S3 버킷/접두사(prefix)
S3_BUCKET=your-bucket-name
S3_PREFIX=upbit_ticker

# 업로드 성공 후 로컬 파일 삭제 여부
DELETE_AFTER_UPLOAD=true

# 결측치 처리 정책
# "none" → None으로 저장 (기본값)
# "skip" → trade_price가 None인 행은 통째로 스킵
NONE_POLICY=none

# 1시간 단위 병합 & 업로드 활성화 여부 (기본: false)
ENABLE_HOURLY_UPLOAD=false

# aws credentials
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key